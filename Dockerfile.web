ARG NEXT_PUBLIC_API_BASE
ARG NEXT_PUBLIC_WEB_ORIGIN
ARG API_BASE_INTERNAL

FROM node:20-bookworm-slim AS base
ARG NEXT_PUBLIC_API_BASE
ARG NEXT_PUBLIC_WEB_ORIGIN
ARG API_BASE_INTERNAL

WORKDIR /app

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV NEXT_PUBLIC_API_BASE="$NEXT_PUBLIC_API_BASE"
ENV NEXT_PUBLIC_WEB_ORIGIN="$NEXT_PUBLIC_WEB_ORIGIN"
ENV API_BASE_INTERNAL="$API_BASE_INTERNAL"

RUN corepack enable

FROM base AS deps

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/api/package.json apps/api/package.json
COPY apps/web/package.json apps/web/package.json
COPY apps/worker/package.json apps/worker/package.json
COPY packages/db/package.json packages/db/package.json
COPY packages/shared/package.json packages/shared/package.json

RUN pnpm install --frozen-lockfile

FROM deps AS build

COPY . .

RUN pnpm --filter @truckerio/web build

FROM node:20-bookworm-slim AS runtime

WORKDIR /app/apps/web

ENV NODE_ENV=production
ENV PORT=3000
ENV PATH="/app/apps/web/node_modules/.bin:/app/node_modules/.bin:$PATH"

COPY --from=deps /app/node_modules /app/node_modules
COPY --from=deps /app/apps/web/node_modules /app/apps/web/node_modules
COPY --from=build /app/apps/web/.next /app/apps/web/.next
COPY --from=build /app/apps/web/public /app/apps/web/public
COPY apps/web/package.json /app/apps/web/package.json

EXPOSE 3000

CMD ["sh", "-c", "next start -p ${PORT}"]
