# Shared (API + worker)
NODE_ENV="production"
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB"
REDIS_URL="redis://USER:PASSWORD@HOST:PORT"
SESSION_SECRET="change_me_long_random"
CSRF_SECRET="change_me_long_random"
UPLOAD_DIR="/data/uploads"
MAX_UPLOAD_MB=15

# API
# Railway sets PORT automatically; leave API_PORT unset unless you need an override.
WEB_ORIGIN="https://app.yourdomain.com"
CORS_ORIGINS="https://app.yourdomain.com,https://your-vercel-preview.vercel.app"
API_BASE="https://api.yourdomain.com"

# Web (Vercel)
NEXT_PUBLIC_API_BASE="https://api.yourdomain.com"
NEXT_PUBLIC_WEB_ORIGIN="https://app.yourdomain.com"
NEXT_PUBLIC_QUICKBOOKS_ENABLED="false"
# Optional: set if you want /api/* proxying in Vercel rewrites
API_BASE_INTERNAL="https://api.yourdomain.com"

# Billing defaults
INVOICE_PREFIX="INV-"

# Email (SMTP) for password resets
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="no-reply@yourdomain.com"
EMAIL_REPLY_TO=""
RETURN_RESET_URL="true"

# QuickBooks (optional)
QUICKBOOKS_ENABLED="false"
QUICKBOOKS_COMPANY_ID=""
QUICKBOOKS_ACCESS_TOKEN=""
