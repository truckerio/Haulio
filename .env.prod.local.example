# Production-like local env (keys match Railway/Vercel; values are local)
NODE_ENV=production

# Database / cache
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=haulio
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/haulio
REDIS_URL=redis://redis:6379

# Web + API
WEB_ORIGIN=http://localhost:3000
NEXT_PUBLIC_WEB_ORIGIN=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:4000
API_BASE=http://localhost:4000
CORS_ORIGINS=http://localhost:3000

# Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_MB=15

# Security (set real values in .env.prod.local)
SESSION_SECRET=
CSRF_SECRET=
MFA_SECRET=
MFA_ENFORCE_ADMIN=false
COOKIE_DOMAIN=

# Email (forgot password)
EMAIL_SERVER=
EMAIL_FROM=
RETURN_RESET_URL=true
